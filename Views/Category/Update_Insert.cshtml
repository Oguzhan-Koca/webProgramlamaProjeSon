@model ProgramlamaYazProje.Models.Category
@inject IStringLocalizer<Lang> _localizer

@{
    ViewData["Title"] = "Category_Update_Insert";
}

<div class="p-2"></div>
<div class="page-header d-flex align-items-center">
    <div class="container position-relative">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 text-center">
                <h2>@_localizer["category.Title"]</h2>
            </div>
        </div>
    </div>
</div>

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name">@_localizer["category.Name"]</label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">@_localizer["animal.Update"]</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">@_localizer["animal.Add"]</button>
                    }
                    <a asp-action="Index" class="btn btn-success form-control">@_localizer["animal.ReturnList"] </a>
                </div>
            </div>
        </div>
    </div>
</form>

